<Window x:Class="WPU221_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPU221_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.3*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.7*"/>
        </Grid.ColumnDefinitions>


        <!-- Первая строка -->
        <TextBlock Grid.Row="0" Text="Строка 1" />

        <!-- Вторая строка 
        -->
        
        <ListBox x:Name="lbMenu"  Grid.Column="0" Grid.Row="1"/>
        <TextBox x:Name="tbInfo" Grid.Column="1" Grid.Row="1"/>
        <!-- Третья строка -->
        <TextBlock Grid.Row="2" Text="Строка 3" />
    </Grid>

</Window>
